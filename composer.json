{
    "name": "koya/phpstantest",
    "type": "project",
    "require": {
        "doctrine/orm": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.5",
        "symfony/cache": "^5.4 || ^6.2 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Koya\\Phpstantest\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "phpstan-analyse": "./vendor/bin/phpstan analyse"
    }
}
